@using WebShopFresh.Shared.Models.ViewModel.ProductViewModels
@model IEnumerable<ProductViewModel>

@{
    var currentSort = ViewData["CurrentSort"] as string;
    var nameSortParam = ViewData["NameSortParam"] as string;
    var priceSortParam = ViewData["PriceSortParam"] as string;
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<div class="container">
    <div id="fullWidthCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/content/slider/0225483.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/content/slider/0225483.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/content/slider/0225483.png" alt="Third slide">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#fullWidthCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#fullWidthCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <nav class="navbar navbar-expand-md navbar-light bg-light mb-4 home-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Categories</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCategories" aria-controls="navbarCategories" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCategories">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Products" asp-route-categoryId="@category.Id" class="nav-link">
                                @category.Name
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <div class="row mt-4">
        <!-- Kategorije -->
        <div class="col-md-3 mb-4">
            <div class="categories-card p-3 border rounded">
                <h4>Categories</h4>
                <div class="btn-group-vertical w-100">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <a asp-controller="Home" asp-action="Products" asp-route-categoryId="@category.Id" class="btn btn-primary mb-2">
                            @category.Name
                        </a>
                    }
                </div>
            </div>
        </div>
        <!-- Product Section on the Right -->
        <div class="col-md-9">
            <!-- Search and Filter Container -->
            <div class="d-flex align-items-center mb-4">
                <!-- Search Form -->
                <form asp-controller="Home" asp-action="Products" method="get" class="d-flex align-items-center me-3">
                    <div class="input-group">
                        <input type="text" name="searchString" autocomplete="off" class="form-control" placeholder="Search" value="@currentFilter" />
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </form>

                <!-- Sorting Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Sort By
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                        <li><a class="dropdown-item @(currentSort == "" ? "active" : "")" asp-action="Products" asp-route-sortOrder="" asp-route-searchString="@currentFilter">Name Ascending</a></li>
                        <li><a class="dropdown-item @(currentSort == "name_desc" ? "active" : "")" asp-action="Products" asp-route-sortOrder="name_desc" asp-route-searchString="@currentFilter">Name Descending</a></li>
                        <li><a class="dropdown-item @(currentSort == "price_asc" ? "active" : "")" asp-action="Products" asp-route-sortOrder="price_asc" asp-route-searchString="@currentFilter">Price Ascending</a></li>
                        <li><a class="dropdown-item @(currentSort == "price_desc" ? "active" : "")" asp-action="Products" asp-route-sortOrder="price_desc" asp-route-searchString="@currentFilter">Price Descending</a></li>
                    </ul>
                </div>
            </div>

            <!-- Product Cards -->
            <div class="row row-cols-1 row-cols-md-3 g-3">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-img-container">
                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text mt-2">
                                    <span class="badge bg-dark">@item.CategoryId</span>
                                    <span class="badge bg-primary">@item.Price.ToString("C", new System.Globalization.CultureInfo("de-eu"))</span>
                                </p>
                                <p class="card-text mt-2 flex-grow-1">@item.Description</p>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <form id="addToCartForm-@item.Id" method="post">
                                    <input type="hidden" name="ProductId" value="@item.Id" />
                                    <input type="hidden" name="Quantity" value="1" />
                                    <button type="button" class="btn btn-success add-to-cart" data-form-id="addToCartForm-@item.Id">
                                        <i class="fa fa-shopping-cart"></i> Cart
                                    </button>
                                </form>
                                <a asp-action="Product" asp-route-id="@item.Id" class="btn btn-info">
                                    <i class="fa fa-info-circle"></i> Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.add-to-cart').click(function () {
                var formId = $(this).data('form-id');
                var form = $('#' + formId);
                var data = {
                    ProductId: form.find('input[name="ProductId"]').val(),
                    Quantity: form.find('input[name="Quantity"]').val()
                };

                $.ajax({
                    url: '@Url.Action("AddToOrderItem", "Order")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify([data]),
                    success: function (response) {
                        alert('Product added to cart!');
                    },
                    error: function (xhr, status, error) {
                        alert('Error adding product to cart.');
                    }
                });
            });
        });
    </script>
}
