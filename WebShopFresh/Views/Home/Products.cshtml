@model IEnumerable<WebShopFresh.Shared.Models.ViewModel.ProductViewModel>

@{
    ViewData["Title"] = "Products";
    ViewBag.CurrentSort = ViewBag.CurrentSort ?? "name";
    ViewBag.NameSortParm = ViewBag.CurrentSort == "name" ? "name_desc" : "name";
    ViewBag.PriceSortParm = ViewBag.CurrentSort == "price" ? "price_desc" : "price";
}

<h1>Products</h1>


<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-4 g-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow">
                    <div class="card-img-container">
                        @* <img src="@item.ImageUrl" class="card-img-top img-fluid" alt="@item.Title"> *@
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <span class="badge bg-dark">@item.CategoryId</span>
                            <span class="badge bg-primary">@item.Price.ToString("C", new System.Globalization.CultureInfo("de-eu"))</span>
                        </p>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer">
                        <form id="@item.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
                            <input type="hidden" name="ProductId" value="@item.Id" />
                            @* <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" /> *@
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-shopping-cart"></i>
                            </button>
                        </form>
                        <a asp-action="Product" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-info-circle"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
