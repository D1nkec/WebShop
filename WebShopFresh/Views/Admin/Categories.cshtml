@model IEnumerable<WebShopFresh.Shared.Models.ViewModel.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<div class="container mt-4">
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th colspan="8">
                        <a asp-controller="Admin" asp-action="CreateProduct" class="btn btn-secondary my-2 my-sm-0 ml-2" type="submit">Add Product</a>
                        <a asp-controller="Admin" asp-action="CreateCategory" class="btn btn-secondary my-2 my-sm-0 ml-2" type="submit">Add Category</a>
                    </th>
                </tr>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                       
                        <td>

                            <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-primary" title="Update">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="CategoryDetails" asp-route-id="@item.Id" class="btn btn-info" title="Details">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this category?');">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table td,
    .table th {
        vertical-align: middle;
    }

    .table th {
        position: sticky;
        top: 0;
        z-index: 1;
        background-color: #343a40;
        color: #fff;
    }

    .table th,
    .table td {
        white-space: nowrap;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn {
        margin-right: 5px;
    }
</style>
